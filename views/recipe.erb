<h2> <%= @recipe.name %> Rating: <%= @recipe.rating %> </h2>

<h3>Ingredients:</h3>
<ul>
  <% @ingredients.each do |ingredient| %>
  <li>  <%= ingredient %> </li>
  <% end %>
</ul>

<h3>Instructions:</h3>
<p><%= @recipe.instructions %></p>

<div class="row">
  <div class="col-md-4">
    <form action="/add_ingredients" method="post">
      <input type="hidden" name="_method" value="patch">
      <input type="hidden" name="id" value="<%= @recipe.id %>">
      <h3>Add an ingredient here!</h3>
      <label for="ingredient">Ingredient:</label>
      <input type="text" name="ingredient" class="form-control">
      <button type="submit" name="button" class="btn">Add Ingredient</button>
    </form>
  </div>

  <div class="col-md-4">
    <form action="/add_instructions" method="post">
      <input type="hidden" name="_method" value="patch">
      <input type="hidden" name="id" value="<%= @recipe.id %>">
      <h3>Add the recipe instructions!</h3>
      <label for="instructions">Instructions:</label>
      <input type="text" name="instructions" class="form-control">
      <button type="submit" name="button" class="btn">Add Instructions</button>
    </form>
  </div>

  <div class="col-md-4">
    <form action="/add_rating" method="post">
      <input type="hidden" name="_method" value="patch">
      <input type="hidden" name="id" value="<%= @recipe.id %>">
      <h3>Give this recipe a rating out of 5!</h3>
      <label for="rating">Rating:</label>
      <select class="form-control" name="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
      <button type="submit" name="button" class="btn">Submit Rating</button>
    </form>
  </div>
</div>

<form action="/add_tag" method="post">
  <input type="hidden" name="_method" value="patch">
  <input type="hidden" name="id" value="<%= @recipe.id %>">
  <h3>Add a tag to this recipe</h3>
  <label for="tag">tag</label>
  <input type="text" name="tag" class="form-control">
  <button type="submit" name="button" class="btn">Add tag</button>
</form>

<div class="col-sm-12 tags">
  <h4>
    <% @recipe.tags().each() do |tag| %>
      <a href="/tags/<%= tag.id %>" class="badge badge-secondary">
        <%= tag.name %>
      </a>
    <% end %>
  </h4>
</div>

<a href="/">
  <button type="button" class="btn">Home</button>
</a>

<form action="/recipes/<%= @recipe.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger">Delete Recipe</button>
</form>
